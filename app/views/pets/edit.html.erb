<h1>Update Pet</h1>
<form class="" action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH"/>
  <label for="name">Name: </label>
  <input type="text" name="pet[name]" id="name" value=" <%= @pet.name %>"><br>
  <label for="image_path">Image URL: </label>
  <input type="text" name="pet[image_path]" id="image_path" value=" <%= @pet.image_path %>"><br>
  <label for="description">Description: </label>
  <input type="text" name="pet[description]" id="description" value=" <%= @pet.description %>"><br>
  <label for="approximate_age">Approximate Age: </label>
  <input type="text" name="pet[approximate_age]" id="approximate_age" value=" <%= @pet.approximate_age%>"><br>
  <label for="sex">Sex: </label>
  <input type="text" name="pet[sex]" id="sex" value=" <%= @pet.sex %>"><br>
  <input type="submit" id="Submit">Update Pet</input>
</form>
