<h1>Update Pet</h1>
<%= form_tag "/pets/#{@pet.id}", method: :patch  do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "Name" %>
  <%= label_tag :image_path %>
  <%= text_field_tag :image_path, "Image URL" %>
  <%= label_tag :description %>
  <%= text_field_tag :description, "Description" %>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age, "Approximate Age" %>
  <%= label_tag :sex %>
  <%= text_field_tag :sex, "Sex" %>
  <%= submit_tag "Submit" %>
<% end %>
