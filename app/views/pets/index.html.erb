<h1>All Pets</h1>
<% @pets.each do |pet| %>
  <img src="<%= pet.image_path %>" alt="<%= pet.image_path %>">
  <ul>
    <li>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}"%></li>
    <li>Approximate age: <%= pet.approximate_age %></li>
    <li>Sex: <%= pet.sex %></li>
    <li>Shelter: <%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %></li>
    <li><%= link_to "Update Pet", "/pets/#{pet.id}/edit", id: "update-pet-#{pet.id}"%></li>
    <li><%= link_to "Delete Pet", "/pets/#{pet.id}", id: "delete-pet-#{pet.id}", method: :delete %></li>
  </ul>
<% end %>
